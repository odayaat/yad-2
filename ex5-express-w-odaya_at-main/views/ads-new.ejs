<h1 class="mb-4 ml-4">Post a new Add</h1>


<div>
  <% if(userdata.email && userdata.date){%>
  <div>  welcome back <%= userdata.email%>, your
    previous ad was posted on <%= userdata.date%> </div>
  <%}%>
</div>

<form action="/ads/new" method="post" class="container">
  <div class="form-group mb-4">
    <label for="title">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Title"
    />
  </div>
  <div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea
      class="form-control"
      id="description"
      name="description"
      placeholder="Description"
    ></textarea>
  </div>
  <div class="form-group mb-4">
    <label for="price">Price</label>
    <input
      type="text"
      class="form-control"
      id="price"
      name="price"
      placeholder="Price"
    />
  </div>
  <div class="form-group mb-4">
    <label for="phone">Phone Number</label>
    <input
            type="tel"
            class="form-control"
            id="phone"
            name="phone"
            placeholder="Enter phone number"
            pattern="^\d{3}-\d{7}$"
            title="Phone number must be in the format XXX-XXXXXXX (e.g., 055-1234567)"
            required
    />

<!--    <label for="phone">Phone Number</label>-->
<!--    <input-->
<!--      type="tel"-->
<!--      class="form-control"-->
<!--      id="phone"-->
<!--      name="phone"-->
<!--      placeholder="Enter phone number"-->
<!--    />-->
  </div>
  <div class="form-group mb-4">
    <label for="email">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      placeholder="Email"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
